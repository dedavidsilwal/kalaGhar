@page "/crafts/my-crafts"
@model KalaGhar.Pages.Crafts.MyCraftModel
@{
}


<a class="btn_1" style="float:right" asp-page="./NewCraft">Add Craft</a>


<!--================Cart Area =================-->
<section class="cart_area" style="">
    <div class="container">
        <div class="cart_inner">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Craft</th>
                            <th scope="col">Price</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Published</th>
                        </tr>
                    </thead>
                    <tbody>


                        @foreach (var craft in Model.Crafts)
                        {
                        <tr>
                            <td>
                                <div class="media">
                                    <div class="d-flex">

                                        @if (craft.Images.Count != 0)
                                        {
                                            <img src="~/Images/@craft.Images.FirstOrDefault().Name" alt="" />
                                        }
                                        else
                                        {
                                            <p>No Image</p>
                                        }

                                    </div>
                                    <div class="media-body">
                                        <p>@craft.Name</p>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <h5>@craft.Price</h5>
                            </td>
                            <td>
                                <div class="product_count">
                                    <h5>@craft.Quantity</h5>
                                </div>
                            </td>
                            <td>
                                <h5>@craft.Published</h5>
                            </td>

                            <td>
                            <td>
                                <a class="btn_1" asp-page="./Edit" asp-route-id="@craft.Id">Edit</a>
                                <a class="btn_2" asp-page="./Detail" asp-route-id="@craft.Id">Detail</a>

                                <form method="post" asp-page-handler="Delete" asp-route-id="@craft.Id"
                                      onclick="return confirm('Are you sure you want to delete this?')">
                                    <button type="submit" class="btn btn-default"><i class="fas fa-trash-alt text-white"></i></button>
                                </form>

                            </td>
                        </tr>

                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
<!--================End Cart Area =================-->
