@page "/crafts/my-crafts"
@model KalaGhar.Pages.Crafts.MyCraftModel
@{
    ViewBag.Title = "My Crafts";
}

<partial name="_StatusMessage" model="Model.StatusMessage" />


<a class="btn btn-default" style="float:right" asp-page="./NewCraft">
    <i class="fa fa-plus-circle" aria-hidden="true"></i>

</a>

<!--================Cart Area =================-->
<section class="cart_area" style="">
    <div class="container">
        <div class="cart_inner">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Craft</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Published</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>


                    @foreach (var craft in Model.Crafts)
                    {
                        <tr>
                            <td>
                                <div class="media">
                                    <div class="d-flex">

                                        @if (craft.Images.Count != 0)
                                        {
                                            <img src="~/Images/@craft.Images.FirstOrDefault().Name" height="90" width="90" alt="@craft.Images.FirstOrDefault().Name" />
                                        }
                                        else
                                        {
                                            <p>No Image</p>
                                        }

                                    </div>
                                    <div class="media-body">
                                        <p>@craft.Name</p>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <p>@craft.Price</p>
                            </td>
                            <td>
                                <div class="product_count">
                                    <hp>@craft.Quantity</hp>
                                </div>
                            </td>
                            <td>
                                <p>@craft.Published</p>
                            </td>

                            <td>
                                <div class="row">
                                    <a class="btn btn-default" asp-page="./Edit" asp-route-id="@craft.Id">
                                        <i class="fa fa-pencil-alt text-white justify-content-center"></i>
                                    </a>

                                    <a class="btn btn-default" asp-page="./Detail" asp-route-id="@craft.Id">
                                        <i class="fa fa-info-circle text-white justify-content-center"></i>
                                    </a>

                                    <form method="post" asp-page-handler="Delete" asp-route-id="@craft.Id"
                                          onclick="return confirm('Are you sure you want to delete this?')">
                                        <button type="submit" class="btn btn-default"><i class="fas fa-trash-alt text-white"></i></button>
                                    </form>
                                </div>

                            </td>
                        </tr>

                    }


                </tbody>
            </table>

        </div>
    </div>
</section>



<!--================End Cart Area =================-->
<style>
    a.btn, button {
        height: 30px;
        margin-left: 2px;
    }

    .btn i {
        line-height: 0 !important;
    }
</style>