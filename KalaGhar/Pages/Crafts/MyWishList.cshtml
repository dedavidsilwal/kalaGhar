@page "/crafts/my-wisthlist"
@model KalaGhar.Pages.Crafts.MyWishListModel
@{
}

<!--================Cart Area =================-->
<section class="cart_area">
    <div class="container">
        <div class="cart_inner">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Craft</th>
                            <th scope="col">Price</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Published</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>


                        @foreach (var craft in Model.Wishes)
                        {                                              
                            <tr>
                                <td>
                                    <div class="media">
                                        <div class="d-flex">
                                            @if (craft.Craft.Images.Count != 0)
                                            {
                                                <img src="~/Images/@craft.Craft.Images.FirstOrDefault().Name" alt="" />
                                            }
                                            else
                                            {
                                                <p>No Image</p>
                                            }
                                        </div>
                                        <div class="media-body">
                                            <p>@craft.Craft.Name</p>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <h5>@craft.Craft.Price</h5>
                                </td>
                                <td>
                                    <div class="product_count">
                                        <h5>@craft.Craft.Quantity</h5>
                                    </div>
                                </td>
                                <td>
                                    <h5>@craft.Craft.Published</h5>
                                </td>
                                <td>
                                    <a class="btn_2" asp-page="./Detail" asp-route-id="@craft.Craft.Id">Detail</a>

                                    <form method="post" asp-page-handler="Delete" asp-route-id="@craft.Craft.Id"
                                          onclick="return confirm('Are you sure you want to delete this?')">
                                        <button type="submit" class="btn btn-default"><i class="fas fa-trash-alt text-white"></i></button>
                                    </form>
                                </td>
                            </tr>

                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
<!--================End Cart Area =================-->
